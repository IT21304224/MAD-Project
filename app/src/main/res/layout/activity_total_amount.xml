<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TotalAmount">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="400dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="150dp"

                app:cardCornerRadius="11dp"
                app:cardElevation="11dp"
                app:cardUseCompatPadding="true" >

                <Button
                    android:id="@+id/btnPayok"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="175dp"
                    android:layout_marginTop="280dp"
                    android:background="@android:color/holo_orange_light"
                    android:text="@string/pay" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="130dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="@string/itemamount1"

                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="126dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="105dp"
                    android:text="@string/deliveryfee1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="144dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="210dp"
                    android:text="@string/totalpayment1"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btncalc"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="155dp"
                    android:background="@android:color/holo_orange_light"
                    android:text="Calculate" />

                <EditText
                    android:id="@+id/etItemAmount"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:inputType="numberSigned" />

                <TextView
                    android:id="@+id/etDeliveryFee"
                    android:layout_width="148dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="105dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/etTotAmount"
                    android:layout_width="127dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="210dp"
                    android:ems="10"
                    android:inputType="numberSigned"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="280dp"
                    android:background="@android:color/holo_orange_light"
                    android:text="@string/cancel" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>